<resources>

    <style name="Rashr" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/darker_green</item>
        <item name="android:buttonStyle">@style/Rashr.Button</item>
        <item name="colorPrimary">@color/custom_green</item>
        <item name="colorPrimaryDark">@color/darker_green</item>
        <item name="colorAccent">@color/golden</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Rashr.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/flatt_green_background</item>
        <item name="android:minHeight">62dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/golden</item>
    </style>

    <style name="Rashr.Button.Small" parent="Rashr.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Rashr.Text">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>