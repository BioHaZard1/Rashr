<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_drawer"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/custom_green" />

        <Button
            android:id="@+id/bOpenRecoveryScriptManager"
            style="@style/nowCardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="74dp"
            android:onClick="bOpenRecoveryScriptManager"
            android:text="@string/recovery_script_manager" />

        <Button
            android:id="@+id/bXDA"
            style="@style/nowCardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="74dp"
            android:onClick="bXDA"
            android:text="@string/xda" />

        <Button
            android:id="@+id/bReport"
            style="@style/nowCardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="74dp"
            android:onClick="bReport"
            android:text="@string/report" />

        <Spinner
            android:id="@+id/spStyle"
            style="@style/spinnerStyleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/styles" />

        <CheckBox
            android:id="@+id/cbShowAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cbShowAds"
            android:text="@string/ShowAds"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/cbLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cbLog"
            android:text="@string/log"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bShowLogs"
            style="@style/nowCardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="74dp"
            android:onClick="bShowLogs"
            android:text="@string/showlog" />

        <Button
            android:id="@+id/bDonate"
            style="@style/nowCardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="74dp"
            android:onClick="bDonate"
            android:text="@string/donate" />

        <Button
            android:id="@+id/bExit"
            style="@style/nowCardDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="74dp"
            android:onClick="bExit"
            android:text="@string/sExit" />

    </LinearLayout>

</ScrollView>